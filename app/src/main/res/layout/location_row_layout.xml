<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/companyNameLocationRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="start"
        android:text="Chip Soul Technology"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/chevronRightImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addressLocationRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Canal Road"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/chevronRightImageView"
        app:layout_constraintStart_toStartOf="@+id/companyNameLocationRow"
        app:layout_constraintTop_toBottomOf="@+id/companyNameLocationRow" />

    <TextView
        android:id="@+id/cityStateZipcodeTextViewRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Peshawar, Kpk 25000"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/chevronRightImageView"
        app:layout_constraintStart_toStartOf="@+id/addressLocationRow"
        app:layout_constraintTop_toBottomOf="@+id/addressLocationRow" />

    <TextView
        android:id="@+id/countryTextViewRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="Pakistan"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chevronRightImageView"
        app:layout_constraintStart_toStartOf="@+id/cityStateZipcodeTextViewRow"
        app:layout_constraintTop_toBottomOf="@+id/cityStateZipcodeTextViewRow" />

    <ImageView
        android:id="@+id/chevronRightImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chevron_right_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>